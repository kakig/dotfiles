# Launcher chords
set $mode_launcher Launch: [f]irefox pa[v]ucontrol [e]xplorer [b]rave
bindsym $mod+x mode "$mode_launcher"

mode "$mode_launcher" {
	bindsym b exec brave , mode "default"
	bindsym c exec google-chrome-stable , mode "default"
	bindsym e exec nautilus --new-window , mode "default"
	bindsym f exec firefox-nightly , mode "default"
	bindsym n exec firefox , mode "default"
	bindsym o exec flatpak run md.obsidian.Obsidian , mode "default"
	bindsym r exec rnote , mode "default"
	bindsym s exec flatpak run com.spotify.Client , mode "default"
	bindsym v exec code , mode "default"
	bindsym w exec autowacom , mode "default"
	bindsym z exec date "+%Y%m%d%H%M%S" | tr -d '\n' | xclip -selection clipboard , mode "default"

	bindsym Escape mode "default"
	bindsym Return mode "default"
}

# Power chords
set $mode_power Power: shut[d]own [r]estart [s]leep p[o]wer-saver [b]alanced
bindsym $mod+p mode "$mode_power"

mode "$mode_power" {
	bindsym d exec systemctl poweroff , mode "default"
	bindsym r exec systemctl reboot , mode "default"
        bindsym s exec sh -c i3lock && systemctl suspend, mode "default"
	bindsym b exec powerprofilesctl set balanced , mode "default"
	bindsym o exec powerprofilesctl set power-saver , mode "default"

	bindsym Escape mode "default"
	bindsym Return mode "default"
}

